{
  "name": "Mail Hash",
  "version": "0.1.0",
  "description": "A chrome extension that adds a random hash to a plus addressable email address or to a custom domain",
  "manifest_version": 2,
  "permissions": ["contextMenus", "storage", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    },
    "default_title": "Mail Hash",
    "default_popup": "options.html"
  },
  "icons": { "16": "icon-16.png", "48": "icon-48.png", "128": "icon-128.png" },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
